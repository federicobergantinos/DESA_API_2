version: '3.8'
services:
  app:
    build: .
    ports:
      - "8080:8080"
    environment:
      - CODE=superSecret
      - POSTGRES_DB=daidb
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=base1234
      - POSTGRES_HOST=db
    depends_on:
      - db
    command: ["sh", "-c", "sleep 10 && node index.js"]  # Esto agrega un retardo de 10 segundos antes de iniciar la aplicaci√≥n

  db:
    image: postgres
    environment:
      - POSTGRES_PASSWORD=base1234
      - POSTGRES_DB=daidb
    ports:
      - "5432:5432"
